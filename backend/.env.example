# ============================================
# SERVER CONFIGURATION
# ============================================

# Port number for the server to run on
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/customer-support-chatbot
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/customer-support-chatbot
MONGODB_URI=mongodb://localhost:27017/customer-support-chatbot

# ============================================
# JWT AUTHENTICATION
# ============================================

# Secret key for JWT token signing (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# JWT token expiration time (e.g., 1h, 7d, 30d)
JWT_EXPIRE=7d

# Refresh token expiration (optional)
JWT_REFRESH_EXPIRE=30d

# ============================================
# CORS CONFIGURATION
# ============================================

# Frontend URL for CORS (comma-separated for multiple origins)
CLIENT_URL=http://localhost:5173

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# Email service provider (gmail, sendgrid, mailgun, etc.)
# EMAIL_SERVICE=gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# ============================================
# RATE LIMITING (Optional)
# ============================================

# Maximum requests per window
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# ============================================
# FILE UPLOAD (Optional)
# ============================================

# Maximum file size in bytes (e.g., 5MB = 5242880)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# ============================================
# CHATBOT/AI CONFIGURATION (Optional)
# ============================================

# OpenAI API Key (if using OpenAI for chatbot)
# OPENAI_API_KEY=your-openai-api-key

# Other AI service keys
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_AI_API_KEY=your-google-ai-api-key

# ============================================
# SESSION CONFIGURATION (Optional)
# ============================================

# Session secret for express-session
# SESSION_SECRET=your-session-secret-here

# ============================================
# LOGGING (Optional)
# ============================================

# Log level (error, warn, info, debug)
# LOG_LEVEL=info
